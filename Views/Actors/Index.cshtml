@model IEnumerable<Actor>

@{
    //eFilm
    ViewData["Title"] = "List of Actors";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="table-responsive">
           <table class="table table-striped table-hover">
            <thead>
                
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio) </th>
                        <a class="btn btn-success text-end" asp-action="Create" style="text-align right">Add New Actor</a>
                    @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }*@
              </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                           @* if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {}*@
                            
                        <td class="align-middle">
                                <div class="btn-group">
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-dark btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </div>
                         </td> 
                        

                    </tr>
                }
            </tbody>

        </table>

    </div>
    </div>
</div>
